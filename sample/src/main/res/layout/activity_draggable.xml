<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- Refresh Wrapper-->
    <org.pinwheel.agility.view.drag.DragRefreshWrapper
        android:id="@+id/drag_wrapper"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <!--&lt;!&ndash; Draggable View&ndash;&gt;-->
        <!--<org.pinwheel.agility.view.drag.DragListView-->
        <!--android:id="@+id/drag_view"-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="match_parent" />-->

        <org.pinwheel.agility.view.drag.DragScrollView
            android:id="@+id/drag_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_horizontal"
                android:orientation="vertical">

                <Button
                    android:id="@+id/button"
                    android:layout_width="match_parent"
                    android:layout_height="300dp"
                    android:text="0" />

                <org.pinwheel.agility.view.SweetProgress
                    android:layout_width="12dp"
                    android:layout_height="12dp" />

                <org.pinwheel.agility.view.SweetProgress
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:background="@color/holo_blue_dark" />

                <org.pinwheel.agility.view.SweetProgress
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:background="@color/holo_red_dark" />

                <org.pinwheel.agility.view.SweetProgress
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:background="@color/holo_gray_dark" />

                <org.pinwheel.agility.view.SweetProgress
                    android:layout_width="64dp"
                    android:layout_height="64dp"
                    android:background="@color/holo_green_dark" />

                <org.pinwheel.agility.view.SweetProgress
                    android:layout_width="72dp"
                    android:layout_height="72dp"
                    android:background="@color/holo_orange_dark" />

                <org.pinwheel.agility.view.SweetProgress
                    android:layout_width="128dp"
                    android:layout_height="128dp"
                    android:background="@color/holo_purple_dark" />

            </LinearLayout>
        </org.pinwheel.agility.view.drag.DragScrollView>
    </org.pinwheel.agility.view.drag.DragRefreshWrapper>

</FrameLayout>